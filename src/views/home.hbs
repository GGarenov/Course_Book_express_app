<main>
    <div class="container">
        <div class="course-message">
            <h1 id="site-title">Course Book</h1>
            <h2 id="site-mid-title">Show your opportunities!</h2>
        </div>

        <div class="last-course">
            {{#if lastThreeCourses.length}}
            {{#each lastThreeCourses}}
            <div class="info">
                <h2 class="title">{{title}}</h2>
                <h4 class="genre">Type: {{type}}</h4>
                <h4 class="certificate">Certificate: {{certificate}}</h4>
                <h4 class="price">Price: â‚¬{{price}}</h4>
                <div class="learn-more">
                    <a href="/posts/{{_id}}/details">Learn More...</a>
                </div>
            </div>
            {{/each}}
            {{else}}
            <p class="not-available-course">No course created yet.</p>
            {{/if}}
        </div>
    </div>
</main>
